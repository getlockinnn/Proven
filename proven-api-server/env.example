# =============================================================================
# Proven Backend - Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# Core Settings
NODE_ENV=production
PORT=3001

# OAuth callback origin override.
# Google blocks OAuth redirects to private/LAN IPs (e.g. 192.168.x.x).
# Use this to force a public/allowed origin for /api/auth/google/callback.
# Examples:
# - iOS simulator: http://localhost:3001
# - HTTPS tunnel or deployed URL: https://api.yourdomain.com
PUBLIC_BASE_URL=https://api.tryproven.fun

# Database (PostgreSQL) - Use RDS endpoint in AWS
DATABASE_URL="postgresql://user:password@your-rds.region.rds.amazonaws.com:5432/proven"
DIRECT_URL="postgresql://user:password@your-rds.region.rds.amazonaws.com:5432/proven"

# Supabase (Authentication & Storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT (Generate: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_EXPIRES_IN=7d

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
NETWORK=devnet
PROGRAM_ID=2axKJmSNPkdAysQXjz7y2R2Tho58WbzLYgYcAsMgfMKc
USDC_MINT=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU

# Oracle keypair (JSON string for containers)
ORACLE_KEYPAIR_JSON=[1,2,3,...]

# Treasury address
TREASURY_ADDRESS=your-treasury-wallet

# Escrow encryption (Generate: openssl rand -base64 32)
ESCROW_ENCRYPTION_KEY=your-32-byte-encryption-key

# CORS (comma-separated origins)
CORS_ORIGINS=https://www.tryproven.fun,https://tryproven.fun

# Admin emails (legacy)
ADMIN_EMAILS=admin@example.com

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info

# Default URLs
DEFAULT_AVATAR_BASE_URL=https://api.dicebear.com/7.x/avataaars/svg?seed=
DEFAULT_CHALLENGE_IMAGE_URL=https://images.unsplash.com/photo-1593079831268-3381b0db4a77

# Google OAuth
google_client_id=your-google-client-id
google_secret=your-google-secret

# Scheduler (set true on ONE instance only)
SCHEDULER_ENABLED=true
